<tal:block content="structure options/buttons_html"/>

<h1>Add organisations to role <tt tal:content="options/role_id" /></h1>


<form name="search-orgs">

  <input type="hidden" name="role_id" tal:attributes="value options/role_id"/>

  <label>
    name:
    <input type="search" name="name" autofocus="autofocus"
           tal:attributes="value options/search_name"/>
  </label>

  <input type="submit" value="Search" />

</form>

<tal:block condition="options/search_name">

  <ul tal:condition="options/search_results">

    <li tal:repeat="org_info options/search_results">

      <tal:block define="is_authenticated python:True">
        <metal:block use-macro="options/org_info_macro" />
      </tal:block>

      <form tal:attributes="action string:${options/base_url}/add_org"
            name="add-org" method="post" style="display: inline">

        <input type="hidden" name="role_id"
               tal:attributes="value options/role_id" />
        <input type="hidden" name="org_id"
               tal:attributes="value org_info/id" />

        <input type="submit" value="add" />

      </form>
    </li>

  </ul>

  <p tal:condition="not:options/search_results" class="no-results">
    Found no organisations matching <i tal:content="options/search_name"/>.
  </p>

</tal:block>
